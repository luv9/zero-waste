pipeline {
    agent any 
    parameters {
      string(name:'build_number',description:'Enter the build number to deploy')
    }
    stages {
        stage('pull') 
        {
            steps {
                script{
                    sh"""
                    pwd
                    ls
                    docker pull krishnap1999/zerowaste-frontend:${build_number}
                    docker image ls
                    """
                }
            }
        }   
        stage('deploy') 
        {
            steps {
                script{
                    sh"""
                    docker stop frontend || true
                    docker rm frontend || true
                    docker run -p 8080:80 --name frontend -d krishnap1999/zerowaste-frontend:${build_number}
                    docker ps
                    """
                }
            }
        } 
    }     
}
